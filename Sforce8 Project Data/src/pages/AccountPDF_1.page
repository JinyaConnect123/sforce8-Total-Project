    <div style="font-size:90%; margin-right: 2px;" align="right">
     <apex:outputtext value="{0,number,}" >
      <apex:outputLabel value="¥ " />
      <apex:param value="{!NULLVALUE(Charge,0)}" />
     </apex:outputtext>
    </div>
   </td>
